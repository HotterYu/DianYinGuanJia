<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <com.znt.vodbox.view.ItemTextView
        android:id="@+id/itv_plan_detail_push_week"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        ></com.znt.vodbox.view.ItemTextView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <com.znt.vodbox.view.ItemTextView
        android:id="@+id/itv_plan_detail_time_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <com.znt.vodbox.view.ItemTextView
        android:id="@+id/itv_plan_detail_broadcast_count"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

    <RelativeLayout
        android:id="@+id/view_plan_detail_broadcast_timeing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        style="@style/AppTheme.Text"
        >
        <TextView
            android:id="@+id/sb_plan_detail_push_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/normal_text_size"
            style="@style/AppTheme.Text"
            android:text="定时插播"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="12dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sb_plan_detail_push_time"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/grey"
            android:text="指定时间插播"
            />
        <com.znt.vodbox.view.SwitchButton
            style="@style/SwitchButton"
            android:id="@+id/sb_plan_detail_broadcast_timeing"
            android:checked="false"
            app:withTextInterval="12dp"
            app:frameDrawable="@drawable/switch_frame"
            app:stateDrawable="@drawable/selector_switch_state"
            app:stateMaskDrawable="@drawable/switch_state_mask"
            app:sliderDrawable="@drawable/selector_switch_slider"
            android:layout_width="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black_on"
            android:textSize="@dimen/normal_text_size"
            />
    </RelativeLayout>

    <com.znt.vodbox.view.ItemTextView
        android:id="@+id/itv_plan_detail_broadcast_timeing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        ></com.znt.vodbox.view.ItemTextView>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />
    <com.znt.vodbox.view.ItemTextView
        android:id="@+id/itv_plan_detail_broadcast_music"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        ></com.znt.vodbox.view.ItemTextView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        />

</LinearLayout>